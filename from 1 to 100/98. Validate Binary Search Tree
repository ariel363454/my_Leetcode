class Solution {
private:
    bool check(TreeNode* curr, long low, long high){
        if(curr == nullptr)
            return true;
        if(curr -> val <= low || curr -> val >= high){
            return false;
        }
        return check(curr -> right, curr -> val, high) && check(curr -> left, low, curr -> val);
    }
public:
    bool isValidBST(TreeNode* root) {
        
        return check(root, -30000000000, 30000000000);
    }
};
