class Solution {
public:
    string countAndSay(int n) {
        if(n == 1)
            return "1";
        string ans = "1";
        for(int i = 1;i < n;i++){
            string newstr = "";
            int times = 0;
            for(int j = 0;j < ans.length();j++){
                if(j+1 < ans.length() && ans[j] == ans[j+1])
                    times++;
                else{
                    newstr += to_string(times+1) + ans[j];
                    times = 0;
                }
            }
            ans = newstr;
        }
        return ans;
    }
};
