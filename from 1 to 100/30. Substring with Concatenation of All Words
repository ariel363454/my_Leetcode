class Solution {
public:
    vector<int> findSubstring(string s, vector<string>& words) {
        vector<int> ans;
        if(s.empty() || words.empty())
            return ans;
        map<string, int> counts;
        int wordnum = words.size();
        int wordlen = words[0].length();
        if(s.length() < wordnum * wordlen)
            return ans;
        for(int i = 0;i < words.size();i++){
            if(counts.count(words[i]))
                counts[words[i]]++;
            else
                counts[words[i]] = 1;
        }
        for(int i = 0;i < wordlen;i++){
            int left = i, right = i;
            int count = 0;
            map<string, int> seen;
            while(right + wordlen <= s.length()){
                string w = s.substr(right, wordlen);
                right += wordlen;
                if(counts.count(w) == 0){
                    seen.clear();
                    count = 0;
                    left = right;
                }else{
                    seen[w]++;
                    count++;
                    while(seen[w] > counts[w]){
                        string remove = s.substr(left, wordlen);
                        seen[remove]--;
                        count--;
                        left += wordlen;
                    }
                    if(count == wordnum)
                        ans.push_back(left);
                }
            }
        }
        return ans;
    }
};
