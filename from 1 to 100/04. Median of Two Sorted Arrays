class Solution {
public:
    double findMedianSortedArrays(vector<int>& nums1, vector<int>& nums2) {
        double ans1 = 0, ans2 = 0;
        int i = 0, j = 0;
        if((nums1.size() + nums2.size()) %2 == 1){
            for(int k = 0;k <= (nums1.size() + nums2.size()) /2; k++){
                if(i < nums1.size() && j < nums2.size()){
                    if(nums1[i] <= nums2[j]){
                        ans1 = nums1[i];
                        i++;
                    }else{
                        ans1 = nums2[j];
                        j++;
                    }
                }else{
                    if(i < nums1.size()){
                        ans1 = nums1[i];
                        i++;
                    }else{
                        ans1 = nums2[j];
                        j++;
                    }
                }
            }
            return ans1;
        }else{
            for(int k = 0;k < (nums1.size() + nums2.size()) /2; k++){
                if(i < nums1.size() && j < nums2.size()){
                    if(nums1[i] <= nums2[j]){
                        ans1 = nums1[i];
                        i++;
                    }else{
                        ans1 = nums2[j];
                        j++;
                    }
                }else{
                    if(i < nums1.size()){
                        ans1 = nums1[i];
                        i++;
                    }else{
                        ans1 = nums2[j];
                        j++;
                    }
                }
            }
            if(i < nums1.size() && j < nums2.size()){
                if(nums1[i] <= nums2[j])
                    ans2 = nums1[i];
                else
                    ans2 = nums2[j];
            }else{
                if(i < nums1.size())
                    ans2 = nums1[i];
                else
                    ans2 = nums2[j];
            }
            return (ans1 + ans2)/2;
        }
    }
};
