class Solution {
public:
    int divide(int dividend, int divisor) {
        if (dividend == divisor)
            return 1;
        if (dividend == INT_MIN && divisor == -1)
            return INT_MAX;
        if (divisor == 1)
            return dividend;
        long ans = 0;
        int sign = 1;
        if((dividend < 0) ^ (divisor < 0))
            sign *= -1;
        long long dvd = abs((long long)dividend);
        long long dvs = abs((long long)divisor);
        int temp = dvs;
        while (dvd >= dvs) {
            long long temp = dvs;
            long long multiple = 1;
            while (dvd >= (temp << 1)) {
                temp <<= 1;
                multiple <<= 1;
            }
            dvd -= temp;
            ans += multiple;
        }
        return (int)sign* ans;
    }
};
