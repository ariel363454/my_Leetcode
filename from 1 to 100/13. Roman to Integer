class Solution {
public:
    int romanToInt(string s) {
        int ans = 0;
        map<char, int> roman;
        roman['I'] = 1;
        roman['V'] = 5;
        roman['X'] = 10;
        roman['L'] = 50;
        roman['C'] = 100;
        roman['D'] = 500;
        roman['M'] = 1000;
        for(int i = 0;i < s.size();i++){
            if((s[i] == 'I' || s[i] == 'X' || s[i] == 'C') && (roman[s[i]] * 10 == roman[s[i+1]] || roman[s[i]] * 5 == roman[s[i+1]]))
                ans -= roman[s[i]];
            else
                ans += roman[s[i]];
        }
        return ans;
    }
};
