class Solution {
public:
    int threeSumClosest(vector<int>& nums, int target) {
        sort(nums.begin(), nums.end());
        int large = INT_MAX/2, small = INT_MIN/2;
        for(int i = 0;i < nums.size()-2;i++){
            if(i > 0 && nums[i] == nums[i-1])
                continue;
            int left = i + 1;
            int right = nums.size() - 1;
            while(left < right){
                int sum = nums[i] + nums[left] + nums[right];
                if(sum == target)
                    return target;
                else if(sum < target){
                    if(sum > small)
                        small = sum;
                    left++;
                }else{
                    if(sum < large)
                        large = sum;
                    right--;
                }
            }
        }
        if((target - small) <= (large - target))
            return small;
        else
            return large;
    }
};
