class Solution {
public:
    string intToRoman(int num) {
        map<int, string> roman;
        roman[0] = "";
        roman[1] = "I";
        roman[4] = "IV";
        roman[5] = "V";
        roman[9] = "IX";
        roman[10] = "X";
        roman[40] = "XL";
        roman[50] = "L";
        roman[90] = "XC";
        roman[100] = "C";
        roman[400] = "CD";
        roman[500] = "D";
        roman[900] = "CM";
        roman[1000] = "M";
        int pow = 1000;
        string ans;
        while(pow > 0){
            int times = num / pow;
            if(times == 9 || times == 5 || times == 4){
                ans += roman[times * pow];
                times = 0;
            }
            if(times > 5){
                ans += roman[5 * pow];
                times -= 5;
            }
            for(int i = 0;i < times;i++){
                ans += roman[pow];
            }
            num -= (num / pow) * pow;
            pow /= 10;
        }
        return ans;
    }

};
