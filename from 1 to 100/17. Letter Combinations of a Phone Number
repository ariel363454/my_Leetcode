class Solution {
public:
    vector<string> letterCombinations(string digits) {
        vector<string> ans;
        int x = 0;
        int num[4] = {0};
        if(digits.empty())
            return ans;
        string letters[10] = {"", "", "abc", "def", "ghi", "jkl", "mno", "pqrs", "tuv", "wxyz"};
        for(int i = 0;i < digits.length();i++)
            num[i] = digits[i] - '0';
        for(int i = 0;i < letters[num[0]].length();i++){
            for(int j = 0;j < letters[num[1]].length()+1;j++){
                for(int k = 0;k < letters[num[2]].length()+1;k++){
                    for(int l = 0;l < letters[num[3]].length()+1;l++){
                        string temp;
                        temp = letters[num[0]][i];
                        if(letters[num[1]].length() != 0)
                            temp += letters[num[1]][j];
                        if(letters[num[2]].length() != 0)
                            temp += letters[num[2]][k];
                        if(letters[num[3]].length() != 0)
                            temp += letters[num[3]][l];
                        ans.push_back(temp);
                        if(letters[num[3]][l+1] == '\0')
                            break;
                    }
                    if(letters[num[2]][k+1] == '\0')
                        break;
                }
                if(letters[num[1]][j+1] == '\0')
                    break;
            }
        }
        return ans;
    }
};
